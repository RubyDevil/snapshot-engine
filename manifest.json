{
  "manifest_version": 3,
  "name": "Snapshot Engine",
  "short_name": "Snapshot",
  "description": "A powerful tool to take snapshots of a javascript obejct at different times and compare them to see what properties have changed. Used for debugging in devtools.",
  "version": "1.0",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "world": "MAIN",
      "run_at": "document_start",
      "matches": ["*://*/*"],
      "all_frames": false,
      "match_about_blank": true
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  }
}
